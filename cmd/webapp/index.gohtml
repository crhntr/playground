<!doctype html>
<html class="no-js" lang="us-en">
<head>
  <title>Playground</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <script type="module">
      import '/assets/wasm_exec.js'

      const go = new Go();
      const el = window.document.querySelector('#downloading')
      el.removeAttribute("hidden")
      try {
          const result = await WebAssembly.instantiateStreaming(fetch("/assets/main.wasm"), go.importObject)
          el.remove()
          await go.run(result.instance)
      } catch (err) {
          el.remove()
          window.document.querySelector("#errors").innerHTML = `<li>${err}</li>`
      }
  </script>
  <style>
      body, html {
          margin: 0;
          padding: 0;

          font-family: sans-serif;
      }

      header {
          margin-bottom: 2rem;
          display: flex;
          justify-content: space-between;
          align-items: center;
          background: HSLA(198, 48%, 41%, 1.00);
          color: white;
      }
      header .page-name {
          padding: .5rem;
          font-size: 1.8rem;
      }
      header a {
          padding: .5rem;
          text-decoration: none;
          color: white;
      }

      #editor {
          padding: 1rem;
      }

      #editor textarea#code {
          border: .05rem solid dimgrey;
          box-shadow: none;
          width: calc(100% - 2 * .05rem);
          display: block;
          box-sizing: border-box;
          resize: vertical;
          min-height: 20rem;
          background: HSLA(60, 100%, 94%, 1.00);
          padding: 1rem;

          font-family: monospace;
      }

      .run {
          padding: 1rem;
      }

      .run iframe.run {
          border: .05rem solid dimgrey;
          box-shadow: none;
          padding: 0;
          width: calc(100vw - 2 * 1rem - 2 * .1rem);
          display: block;
          box-sizing: border-box;
          height: 80vh;
      }
  </style>
</head>

<body>
<header>
  <div class="page-name">Playground</div>
  <a href="https://github.com/crhntr/playground" target="_blank">Source Code</a>
</header>

<div id="downloading" hidden>Downloading... (this can take a while)</div>

<div id="editor" hidden>
  <label>
    Select Example
    <select id="select-example"></select>
  </label>
  <label for="code"></label>
  <textarea
          id="code"
          spellcheck="false"
          autofocus
          autocomplete="off"
          autocapitalize="off"
          wrap="off"
  ></textarea>
  <button id="run">Run</button>
  <div id="logs">
    <pre id="stdout"></pre>
    <pre id="stderr"></pre>
  </div>

  <ul id="errors">
  </ul>

  <details id="go-version">
    <summary>go version</summary>
    <pre>loading...</pre>
  </details>
</div>
</body>
</html>